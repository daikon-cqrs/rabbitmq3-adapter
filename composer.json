{
    "name": "daikon/rabbitmq3-adapter",
    "type": "library",
    "description": "RabbitMQ3 adapter for Daikon projects.",
    "keywords": [ "rabbitmq3", "adapter" ],
    "homepage": "https://github.com/daikon-cqrs/rabbitmq3-adapter",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "daikon/async-job": "master@dev",
        "daikon/dbal": "master@dev",
        "daikon/message-bus": "master@dev",
        "php-amqplib/php-amqplib": "^v2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.3",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\RabbitMq3\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\RabbitMq3\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/",
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/",
        "copy-paste-detector": "phpcpd src/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
